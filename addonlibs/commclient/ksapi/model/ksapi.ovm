	ASSOCIATION operationToVariable	: ONE_TO_MANY
		PARENT parVarOperation	:	CLASS ksapi/variableOperation;
		CHILD  chVariable 		:	CLASS ksapi/Variable;
	END_ASSOCIATION;
END_LIBRARY;
