			submit				:	C_FUNCTION <KSAPI_FNC_SUBMIT>;
			setandsubmit		:	C_FUNCTION <KSAPI_FNC_SETANDSUBMIT_RENAMEOBJECT>;
		END_OPERATIONS;
	END_CLASS;		
	
