SYSTEM = LINUX
SYSDIR = linux

COMPILER = GNU

#	Filename conventions
#	--------------------
_C   = .c
_OBJ = .o
_LIB = .a
_DLL = .so
_EXE =

#	Include generic part
#	--------------------
include ../generic.mk

ADD_LIBS += $(foreach lib, $(EXTRA_LIBS),$(lib))

all: $(TARGETS)
	@strip --strip-debug $(USERLIB_LIB)
	@strip --strip-debug $(USERLIB_DLL)
	cp $(USERLIB_DLL) $(USERLIB_DIR)


debug: $(TARGETS)
	cp $(USERLIB_DLL) $(USERLIB_DIR)


#	Compiler
#	--------

OV_CODEGEN_EXE = $(BIN_DIR)ov_codegen$(_EXE)
CC		= gcc
ifneq ($(TARGET), debug)
	OPT = -O2
endif
CC_FLAGS	= -g -std=c99 -Wdeclaration-after-statement -Wall -Wno-attributes $(OPT) -shared $(EXTRA_CC_FLAGS)
CC_DEFINES	= $(DEFINES)
CC_INCLUDES	= $(INCLUDES) -I.
COMPILE_C	= $(CC) $(CC_FLAGS) $(CC_DEFINES) $(CC_INCLUDES) -c
LD		= gcc -shared
AR			= ar
RANLIB		= ranlib

#   Rules
#   -----
%.c %.h: %.ovm
	$(OV_CODEGEN_EXE) -I $(BASE_MODEL_DIR) -f $< -l $(notdir $(basename $<))


%.o: %.c
%.o: %.c $(HEADERS)
	$(COMPILE_C) -o $@ $<

$(USERLIB_LIB) : $(USERLIB_DLL)
	$(AR) rv $@ $^
	$(RANLIB) $@

$(USERLIB_DLL) : $(USERLIB_OBJ) $(ADD_LIBS)
	$(LD) -o $@ $^ $(LD_FLAGS)

#	Aufraeumen
#	----------

clean:
	-@rm *$(_C) *.h *$(_LIB) *$(_DLL) *$(_OBJ)
