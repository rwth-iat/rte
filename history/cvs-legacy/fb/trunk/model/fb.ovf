#ifndef FB_OVF_INCLUDED
#define FB_OVF_INCLUDED

#ifdef __cplusplus
extern "C" {
#endif

/*
*	Execute method of a task object
*/
typedef OV_DLLFNCEXPORT void FB_FNC_EXECUTE(
	OV_INSTPTR_fb_task	ptask,
	OV_TIME				*pltc
);

/*
*	Checkelement method of a connection object
*/
typedef OV_DLLFNCEXPORT OV_BOOL FB_FNC_CHECKELEMENTS(
	OV_INSTPTR_fb_connection	pconn
);

/*
*	Trigger method of a connection object
*/
typedef OV_DLLFNCEXPORT void FB_FNC_TRIGGER(
	OV_INSTPTR_fb_connection	pconn
);

/*
*	Type method of a functionblock object
*/
typedef OV_DLLFNCEXPORT void FB_FNC_TYPEMETHOD(
	OV_INSTPTR_fb_functionblock	pfb,
	OV_TIME						*pltc
);

/*
*	Pre-intask method of a functionchart object
*/
typedef OV_DLLFNCEXPORT void FB_FNC_PREINTASK(
	OV_INSTPTR_fb_functionchart	pfc,
	OV_TIME						*pltc
);

/*
*	Post-intask method of a functionchart object
*/
typedef OV_DLLFNCEXPORT void FB_FNC_POSTINTASK(
	OV_INSTPTR_fb_functionchart	pfc,
	OV_TIME						*pltc
);

/*
 * Get variable value (object variable or real variable) by name
 */
typedef OV_DLLFNCEXPORT OV_RESULT FB_FNC_GETVARIABLE(
	OV_INSTPTR_fb_functionchart	pfc,
	const OV_STRING varname,
	OV_ANY *pvarcurrprops
);

/*
 * Set variable value (object variable or real variable) by name
 */
typedef OV_DLLFNCEXPORT OV_RESULT FB_FNC_SETVARIABLE(
	OV_INSTPTR_fb_functionchart	pfc,
	const OV_STRING varname,
	OV_ANY *pvarcurrprops
);

#ifdef __cplusplus
}	/* extern "C" */
#endif

#endif
