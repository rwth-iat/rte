#   Plattform
#   ---------

SYSTEM = NT
SYSDIR = nt

COMPILER = GNU

#	Filename conventions
#	--------------------
_C   = .c
_OBJ = .o
_LIB = .a
_DLL = .dll
_EXE = .exe
#	Include generic part
#	--------------------
include ../generic.mk

# Libraries
# ---------
OVLIBS = $(BASE_LIB_DIR)libov$(_LIB) $(BASE_LIB_DIR)libovks$(_LIB)
ADD_LIBS += $(foreach lib, $(EXTRA_LIBS),$(lib))

all: $(TARGETS)
	strip --strip-debug $(USERLIB_LIB)
	strip --strip-debug $(USERLIB_DLL)
	cmd /c copy $(USERLIB_DLL) $(subst /,\\, $(USERLIB_DIR))


debug: $(TARGETS)
	cmd /c copy $(USERLIB_DLL) $(subst /,\\, $(USERLIB_DIR))


#	Compiler
#	--------

OV_CODEGEN_EXE = $(BIN_DIR)ov_codegen$(_EXE)
CC		= gcc
ifneq ($(TARGET), debug)
	OPT = -O2 -fno-strict-aliasing
endif
CC_FLAGS	= -g -std=c99 -Wdeclaration-after-statement -Wall -Wno-attributes $(OPT) -shared $(EXTRA_CC_FLAGS)
CC_DEFINES	= $(DEFINES) -D__NT__=1 
CC_INCLUDES	= $(INCLUDES) -I.
COMPILE_C	= $(CC) $(CC_FLAGS) $(CC_DEFINES) $(CC_INCLUDES) -c
LD		= gcc -shared -Wl,--output-def,ksserv.def,--out-implib,ksserv.a
AR			= ar
RANLIB		= ranlib

#   Rules
#   -----
%.c %.h: %.ovm
	$(OV_CODEGEN_EXE) -I $(BASE_MODEL_DIR) -f $< -l $(notdir $(basename $<))


%.o: %.c
%.o: %.c $(HEADERS)
	$(COMPILE_C) -o $@ $<

$(USERLIB_LIB) : $(USERLIB_DLL)

$(USERLIB_DLL) : $(USERLIB_OBJ) $(ADD_LIBS) $(OVLIBS)
	$(LD) -o $@ $^ $(LD_FLAGS)

#   Dependencies
#   ------------

.depend:
	touch $@

depend : $(SOURCES)
	$(COMPILE_C) -MM $(USERLIB_SRC) > .depend

#	Aufraeumen
#	----------

clean:
	-@cmd /c del *$(_C) *.h *$(_LIB) *$(_DLL) *$(_OBJ)
