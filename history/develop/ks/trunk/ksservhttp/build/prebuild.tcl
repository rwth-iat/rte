   if {$makmak == ""} {
           if { [catch { exec acplt_makmak -l $libname} msg] } {
              puts "ERROR: $msg"
           }
   } else {
           if { [catch { exec acplt_makmak -l $libname $makmak} msg] } {
              puts "ERROR: $msg"
           }
   }
